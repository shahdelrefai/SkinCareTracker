<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkinCareTracker"
             xmlns:converters="clr-namespace:SkinCareTracker.Converters"
             x:Class="SkinCareTracker.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
 
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
            <converters:BoolToArchiveTextConverter x:Key="BoolToArchiveTextConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <converters:BoolToReminderTextConverter x:Key="BoolToReminderTextConverter" />
            <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
            <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
            <converters:MealTypeToEmojiConverter x:Key="MealTypeToEmojiConverter" />
            <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
