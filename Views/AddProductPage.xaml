<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SkinCareTracker.ViewModels"
             x:Class="SkinCareTracker.Views.AddProductPage"
             x:DataType="vm:AddProductViewModel"
             Title="Add Product">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Product Name" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" 
                   Placeholder="e.g., Hydrating Serum"
                   ReturnType="Next" />

            <Label Text="Brand" FontAttributes="Bold" />
            <Entry Text="{Binding Brand}" 
                   Placeholder="e.g., CeraVe"
                   ReturnType="Next" />

            <Label Text="Category" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding Category}"
                    Title="Select category" />

            <Label Text="Ingredients" FontAttributes="Bold" />
            <Editor Text="{Binding Ingredients}"
                    Placeholder="Enter ingredients list or tap scan button..."
                    HeightRequest="120"
                    AutoSize="TextChanges" />

            <Button Text="ðŸ“· Scan Ingredients"
                    Command="{Binding ScanIngredientsCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black" />

            <Label Text="Purchase Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding PurchaseDate}"
                        Format="D" />

            <Label Text="Expiry Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding ExpiryDate}"
                        Format="D" />

            <Label Text="Notes (Optional)" FontAttributes="Bold" />
            <Editor Text="{Binding Notes}"
                    Placeholder="Any notes about this product..."
                    HeightRequest="100"
                    AutoSize="TextChanges" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="LightGray"
                        TextColor="Black" />

                <Button Grid.Column="1"
                        Text="Save Product"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InvertedBoolConverter}}" />
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsSaving}"
                               IsVisible="{Binding IsSaving}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>