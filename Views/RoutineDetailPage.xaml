<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SkinCareTracker.ViewModels"
             xmlns:models="clr-namespace:SkinCareTracker.Models"
             x:Class="SkinCareTracker.Views.RoutineDetailPage"
             x:DataType="vm:RoutineDetailViewModel"
             Title="Routine Details">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

            <VerticalStackLayout IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                 Spacing="15">

                <!-- Routine Name -->
                <Label Text="{Binding Routine.Name}"
                       FontSize="28"
                       FontAttributes="Bold" />

                <BoxView HeightRequest="1" Color="LightGray" />

                <!-- Basic Info -->
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                    <Label Grid.Row="0" Grid.Column="0" Text="Time of Day:" FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Routine.TimeOfDay}" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Started:" FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Routine.StartDate, StringFormat='{0:MMMM dd, yyyy}'}" />

                    <Label Grid.Row="2" Grid.Column="0" Text="Status:" FontAttributes="Bold" />
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding Routine.IsArchived, Converter={StaticResource BoolToStatusConverter}}" />
                </Grid>

                <!-- Steps -->
                <Label Text="STEPS" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0" />

                <CollectionView ItemsSource="{Binding Routine.Steps}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:RoutineStep">
                            <Border Margin="0,5" Padding="15" StrokeShape="RoundRectangle 5">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                                    <!-- Step Number -->
                                    <Border Grid.Column="0"
                                           WidthRequest="40"
                                           HeightRequest="40"
                                           StrokeShape="RoundRectangle 20"
                                           Padding="0"
                                           Stroke="Transparent"
                                           BackgroundColor="{StaticResource Primary}">
                                        <Label Text="{Binding Order}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Border>

                                    <!-- Step Details -->
                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="{Binding Product.Name}"
                                               FontSize="16"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Product.Brand}"
                                               FontSize="14"
                                               TextColor="Gray" />
                                        <Label Text="{Binding Instructions}"
                                               FontSize="14"
                                               Margin="0,5,0,0"
                                               IsVisible="{Binding Instructions, Converter={StaticResource IsStringNotNullOrEmptyConverter}}" />
                                        <Label FontSize="12" TextColor="DarkGray" Margin="0,5,0,0">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="â± Wait " />
                                                    <Span Text="{Binding WaitTimeMinutes}" />
                                                    <Span Text=" minutes after" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Schedule -->
                <Label Text="SCHEDULE" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0" />

                <Border Padding="15" StrokeShape="RoundRectangle 5">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="Days:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding ScheduleDaysText}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Time:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding ScheduleTimeText}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Reminders:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding RemindersEnabledText}" />
                    </Grid>
                </Border>

                <!-- Actions -->
                <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                    <Button Text="Archive Routine"
                            Command="{Binding ArchiveCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            IsVisible="{Binding Routine.IsArchived, Converter={StaticResource InvertedBoolConverter}}" />

                    <Button Text="Delete Routine"
                            Command="{Binding DeleteCommand}"
                            BackgroundColor="Red"
                            TextColor="White" />
                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>